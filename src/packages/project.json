{
  "name": "simple-auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src/packages/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/src/packages",
        "main": "src/packages/src/index.ts",
        "tsConfig": "src/packages/tsconfig.lib.json",
        "assets": ["src/packages/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs simple-auth {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "src/packages/**/*.ts",
          "src/packages/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "src/packages/jest.config.ts"
      }
    }
  },
  "tags": []
}
